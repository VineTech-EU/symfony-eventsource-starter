{
    "type": "project",
    "name": "vinetech/symfony-eventsource-starter",
    "description": "Symfony Event Sourcing Starter Kit with DDD, Clean Architecture and CQRS",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "artprima/prometheus-metrics-bundle": "^1.20",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.30",
        "league/flysystem-bundle": "^3.6",
        "liip/monitor-bundle": "^2.24",
        "predis/predis": "^3.2",
        "symfony/amqp-messenger": "7.1",
        "symfony/cache": "^7.1",
        "symfony/console": "7.1",
        "symfony/doctrine-messenger": "7.1",
        "symfony/dotenv": "7.1",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.1",
        "symfony/mailer": "7.1",
        "symfony/messenger": "7.1",
        "symfony/monolog-bundle": "^3.10",
        "symfony/property-access": "7.1",
        "symfony/runtime": "7.1",
        "symfony/scheduler": "7.1",
        "symfony/serializer": "7.1",
        "symfony/translation": "7.1",
        "symfony/twig-bundle": "7.1",
        "symfony/uid": "7.1",
        "symfony/validator": "7.1",
        "symfony/yaml": "7.1",
        "twig/extra-bundle": "^3.22",
        "twig/html-extra": "^3.22",
        "twig/intl-extra": "^3.22"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.2",
        "doctrine/doctrine-fixtures-bundle": "^3.6",
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.48",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^11.0",
        "symfony/browser-kit": "7.1",
        "symfony/phpunit-bridge": "7.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^7.1"
        }
    }
}
